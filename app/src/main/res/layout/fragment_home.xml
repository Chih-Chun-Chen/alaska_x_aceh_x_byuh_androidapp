<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".ui.home.HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/my_icon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="top|center"
            android:layout_marginTop="20dp"
            android:src="@drawable/aceh_logo_small"
            tools:ignore="RtlHardcoded" />

        <Button
            android:id="@+id/Button_Free_Food"
            android:layout_width="328dp"
            android:layout_height="104dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:text="Find a Free Food Pantry Today in Anchorage"
            android:drawableStart="@drawable/exclamation_icon"
            />

        <Button
            android:id="@+id/Button_211"
            android:layout_width="328dp"
            android:layout_height="104dp"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:background="@drawable/home_button_shape"
            android:text="211"
            android:textColor="#FFFFFF"
            android:textSize="35sp" />

        <Button
            android:id="@+id/Button_Entry"
            android:layout_width="328dp"
            android:layout_height="104dp"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:background="@drawable/home_button_shape"
            android:text="Coordinated Entry"
            android:textColor="#FFFFFF"
            android:textSize="35sp" />

        <Button
            android:id="@+id/button_shelter"
            android:layout_width="328dp"
            android:layout_height="104dp"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:background="@drawable/home_button_shape"
            android:text="Find A shelter"
            android:textColor="#FFFFFF"
            android:textSize="35sp" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>