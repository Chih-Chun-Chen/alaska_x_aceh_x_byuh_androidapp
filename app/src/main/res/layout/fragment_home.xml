<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".ui.Home.HomeFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="328dp"
                android:layout_height="81dp"
                android:layout_gravity="center"
                android:layout_marginTop="60dp"
                android:text="Find a Free Food Pantry Today in Anchorage">

                <FrameLayout
                    android:layout_width="83dp"
                    android:layout_height="match_parent"
                    android:background="#042B27"
                    tools:ignore="MissingConstraints,SpeakableTextPresentCheck">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/info_icon"
                        android:layout_gravity="center"/>
                </FrameLayout>

                <Button
                    android:id="@+id/Button_Free_Food"
                    android:layout_width="245dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="end"
                    android:background="@drawable/custom_button"
                    android:text="Find a Free food pantry today in Anchorage"
                    android:textSize="16sp"
                    tools:ignore="MissingConstraints" />
            </FrameLayout>

            <Button
                android:id="@+id/Button_211"
                android:layout_width="328dp"
                android:layout_height="104dp"
                android:layout_gravity="center"
                android:layout_marginTop="40dp"
                android:background="@drawable/home_button_shape"
                android:text="@string/home_211_button"
                android:textSize="35sp"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/Button_Entry"
                android:layout_width="328dp"
                android:layout_height="104dp"
                android:layout_gravity="center"
                android:layout_marginTop="40dp"
                android:background="@drawable/home_button_shape"
                android:text="@string/home_Entry_button"
                android:textSize="35sp"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/button_shelter"
                android:layout_width="328dp"
                android:layout_height="104dp"
                android:layout_gravity="center"
                android:layout_marginTop="50dp"
                android:background="@drawable/custom_button2"
                android:text="Find A shelter"
                android:textColor="#EB921A"
                android:textSize="35sp" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
