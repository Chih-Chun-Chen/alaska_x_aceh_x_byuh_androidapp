<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".ui.home.HomeFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/my_icon"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="top|center"
                android:layout_marginTop="20dp"
                android:src="@drawable/aceh_logo_small"
                tools:ignore="RtlHardcoded" />

            <Button
                android:id="@+id/Button_Free_Food"
                android:layout_width="328dp"
                android:layout_height="104dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="@drawable/home_button_shape"
                android:text="@string/home_food_button"
                android:textSize="20sp"
                android:drawableStart="@drawable/exclamation_icon"
                android:paddingStart="10dp"
                />

            <Button
                android:id="@+id/Button_211"
                android:layout_width="328dp"
                android:layout_height="104dp"
                android:layout_gravity="center"
                android:layout_marginTop="40dp"
                android:background="@drawable/home_button_shape"
                android:text="@string/home_211_button"
                android:textSize="35sp"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/Button_Entry"
                android:layout_width="328dp"
                android:layout_height="104dp"
                android:layout_gravity="center"
                android:layout_marginTop="40dp"
                android:background="@drawable/home_button_shape"
                android:text="@string/home_Entry_button"
                android:textSize="35sp"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/button_shelter"
                android:layout_width="328dp"
                android:layout_height="104dp"
                android:layout_gravity="center"
                android:layout_marginTop="50dp"
                android:background="@drawable/home_button_shape"
                android:text="@string/home_shelter_button"
                android:textSize="35sp"
                android:textColor="#FFFFFF" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
